{
  "name": "ts-orm",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "node --import tsx --test-concurrency=1 --test ./**/*.test.ts",
    "test:w": "nodemon --watch './**/*.ts' --exec \"node --import tsx --test ./**/*.test.ts\"",
    "fmt": "biome format --write src/*",
    "gen": "npm run gen:kysely && npm run gen:prisma && npm run fmt",
    "gen:kysely": "kysely-codegen --url mysql://root:root@localhost/playground --out-file src/db/kysely/schema.d.ts",
    "gen:prisma": "prisma db pull --schema=./src/db/prisma/schema.prisma && prisma generate --schema=./src/db/prisma/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@types/node": "^20.12.12",
    "kysely-codegen": "^0.15.0",
    "nodemon": "^3.1.0",
    "prisma": "^5.14.0",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@prisma/client": "^5.14.0",
    "kysely": "^0.27.3",
    "mysql2": "^3.9.7"
  }
}
